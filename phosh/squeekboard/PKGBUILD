_mode=host
pkgname=squeekboard
pkgdesc="The phosh keyboard"
pkgver=r2235.a4e58ae
pkgrel=1
_arches=all
arch=(
    x86_64
    aarch64
)
license=(GPL3)
url=https://gitlab.gnome.org/World/Phosh/squeekboard
depends=(
    gtk3
    gnome-desktop
    feedbackd
    wayland-protocols
)
makedepends=(
    llvm-libs
    rust
    cargo
    meson
    ninja
)
_commit=a4e58aef6accef6f209fa7aec4130bf687086d18
source=("git+$url#commit=$_commit")
sha256sums=(SKIP)

pkgver() {
    cd "$pkgname"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
    cd ${pkgname}
}

build() {
    arch-meson ${pkgname} output -Dtests=false
    ninja -C output
}

package() {
    DESTDIR="$pkgdir" ninja -C output install
    ln -sf /usr/bin/squeekboard "$pkgdir/usr/bin/osk-wayland"
}
