_mode=host
pkgname=phosh-mobile-settings
pkgdesc="A settings app for mobile specific things"
pkgver=0.25.0.r0.g8f95c3f
pkgrel=1
_arches=all
arch=(
    x86_64
    aarch64
)
license=(GPL-3.0-or-later)
depends=(
    desktop-file-utils
    glib2
    gtk4
    libadwaita
    lm_sensors
    wayland-protocols
    phosh
)
makedepends=(
    meson
    ninja
)
_commit=8f95c3f4258ba2b4753049b8c9ecabe7b402cf4d
source=(
    "git+https://gitlab.gnome.org/guidog/phosh-mobile-settings.git#commit=$_commit"
)
sha256sums=(
    SKIP
)

pkgver() {
    cd "$pkgname"
    git describe --long "$_commit" | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    arch-meson ${pkgname} output
    ninja -C output
}

package() {
    DESTDIR="$pkgdir" meson install --no-rebuild -C output
}
