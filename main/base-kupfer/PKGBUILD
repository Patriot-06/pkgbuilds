_mode=cross
pkgname=base-kupfer
pkgver=0.1
pkgrel=2
arch=(aarch64)
license=(MIT)
depends=(
    alsa-ucm-conf
    alsa-utils
    bluez
    bluez-libs
    bluez-utils
    glibc-locales
    haveged
    iw
    net-tools
    networkmanager
    openssh
    reboot-mode
    sudo
    usb-tethering
    wireless-regdb
    wpa_supplicant
    xdg-user-dirs
)
install=base-kupfer.install
source=(
    mkinitcpio.conf
    50-mkinitcpio-overwrite.hook
    mkinitcpio-overwrite.sh
    ignore-power-key.conf
    locale.conf
    rootfsresize-hooks.sh
    rootfsresize-install.sh
    rootfsdetect-hooks.sh
    rootfsdetect-install.sh
    firmwaresearchpath-hooks.sh
    firmwaresearchpath-install.sh
    random-mac.conf
)
