source=(
    "$url"
)
sha256sums=(
    b5c231f1d8f7ec0654a6372a0cbbbae29456191138c26827a486dee0f01c9421
)

package() {
    install -Dm644 "$srcdir"/firefox-wayland.sh "$pkgdir"/etc/conf.d/firefox-wayland.sh
}
