_mode=cross
pkgname=flavour-gnome-minimal
pkgdesc="Installs the gnome-shell metapackage"
pkgver=1.0
pkgrel=1
_arches=all
arch=(
    x86_64
    aarch64
    armv7h
)
license=(GPL3)
depends=(
    meta-gnome-minimal-common
    gnome-shell
    gdm
)
source=(
    gnome.txt
)
sha256sums=(
    d25ef44eda57603bf9b0f54bdb76cf58d079a392ab2149805dd696dd775b532e
)

package() {
    install -Dm644 "$srcdir"/gnome.txt "$pkgdir"/etc/kupfer/systemd/gnome.txt
}
