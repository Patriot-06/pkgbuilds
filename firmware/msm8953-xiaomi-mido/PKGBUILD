_mode=cross
pkgname=firmware-msm8953-xiaomi-mido
pkgver=0.1
pkgrel=2
_arches=specific
arch=(aarch64)
license=(custom:Proprietary)
options=(!strip)
source=(
    "git+https://github.com/Kiciuk/proprietary_firmware_mido"
)
sha256sums=(
    SKIP
)
pkgdesc="Firmware for Xiaomi Redmi Note 4X"
_fwdir="/usr/lib/firmware/kupfer"

build() {
    echo "$pkgname needs no building!"
}

package() {
    cd "$srcdir/proprietary_firmware_mido/apnhlos"
	
	install -Dm644 a506_zap.mdt -t "$pkgdir/$_fwdir"
	install -Dm644 a506_zap.b02 -t "$pkgdir/$_fwdir"

}
