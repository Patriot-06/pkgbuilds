_mode=cross
_nodeps=true
pkgname=boot-android-bootimg-updater
pkgver=0.4
pkgrel=2
_arches=all
arch=(
    aarch64
    x86_64
)
license=(MIT)
depends=(mkbootimg-git)
install=android-bootimg-updater.install
source=(
    91-linux.hook
    update-bootimg.sh
)
sha256sums=(
    01419bd235d098402fa78bf8127d229d2f8e4fb6f09ce9bc76b5df9e35e52479
    6a579bab38a032b09539f278e304968ae6e4d21efc75b287216c4d01c4465537
)

package() {
    install -Dm644 "$srcdir"/91-linux.hook "${pkgdir}/usr/share/libalpm/hooks/91-${pkgname}.hook"
    install -Dm755 "$srcdir"/update-bootimg.sh "$pkgdir"/usr/bin/update-bootimg
}
