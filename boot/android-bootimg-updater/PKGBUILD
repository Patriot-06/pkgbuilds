_mode=cross
pkgname=boot-android-bootimg-updater
pkgver=0.2
pkgrel=1
_arches=all
arch=(
    aarch64
    x86_64
)
license=(MIT)
depends=(mkbootimg-git)
install=android-bootimg-updater.install
source=(
    91-linux.hook
    update-bootimg.sh
)
sha256sums=(
    c9f94e69b05341a759795f9e93b32ba229fccd70fd300e0751c0f908fa394644
    02675a708373a75f4e2f836eaef657a2f78f0f374d09fc2c091264a8f63846a7
)

package() {
    install -Dm644 "$srcdir"/91-linux.hook "${pkgdir}/usr/share/libalpm/hooks/91-${pkgname}.hook"
    install -Dm755 "$srcdir"/update-bootimg.sh "$pkgdir"/usr/bin/update-bootimg
}
