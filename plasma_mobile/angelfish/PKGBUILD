# Maintainer: Danct12 <danct12@disroot.org>
# Contributor: Dan Johansen <strit@manjaro.org>
# Contributor: Devin Lin <devin@kde.org>
_mode=host
pkgname=angelfish
pkgdesc="Plasma Webbrowser for Mobile Devices"
pkgver=23.01.0.r0.g29f639f
pkgrel=1
_arches=all
arch=(
    x86_64
    armv7h
    aarch64
)
license=(GPL-3.0-or-later)
depends=(
    desktop-file-utils
    plasma-framework
    qt5-webengine
    qt5-feedback
    purpose
    ki18n
    kconfig
    kcoreaddons
    kdbusaddons
    kwindowsystem
    knotifications
    kirigami2
    kirigami-addons
)
makedepends=(
    cmake
    extra-cmake-modules
    qt5-svg
    qt5-tools
)
_commit=29f639f6fe04d0bc88de9522b2bda259b1950e7a
source=(
    "git+https://invent.kde.org/plasma-mobile/angelfish.git#commit=$_commit"
)
sha256sums=(
    SKIP
)

pkgver() {
    cd "$pkgname"
    git describe --long "$_commit" | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    mkdir -p build
}

build() {
    cd build
    cmake ../angelfish \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DBUILD_TESTING=OFF \
        -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
        -DCMAKE_BUILD_TYPE=Release
    make
}

package() {
    cd build
    make DESTDIR="$pkgdir/" install
}
