# Maintainer: Robert Tari <robert at tari dot in>
_mode=host
pkgname=cmake-extras
pkgdesc="A collection of add-ons for the CMake build tool"
pkgver=1.7.r0.gb9d61e4
pkgrel=1
_arches=all
arch=(
    x86_64
    aarch64
    armv7h
)
license=(LGPL3)
depends=(
    cmake
    python
)
_commit=b9d61e4e0e204e2de5b630ca225711ff7f362693
source=(
    "git+https://gitlab.com/ubports/development/core/cmake-extras.git#commit=$_commit"
)
sha256sums=(
    SKIP
)

pkgver() {
    cd "$pkgname"
    git describe --long --abbrev=7  --tags "$_commit" | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    cd "${srcdir}"/"${pkgname}"
    cmake -DCMAKE_INSTALL_PREFIX=/usr
    make
}

package() {
    cd "${srcdir}"/"${pkgname}"
    make DESTDIR="${pkgdir}" install
}

